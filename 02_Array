#include <iostream>

using namespace std;

int note[30];
int i = 0;
int average = 0;
int summe=0;
int num;

int main()
{
	do
	{
		cout << (" Insert the number of the students: ");
		cin >> num;
	} while (num < 15 or num > 30);

	for (i = 0; i < num; i = i+1)
	{
		do
		{
			cout << (" Insert the note of ") << i + 1 << (" Student: ");
			cin >> note[i];
			summe = summe + note[i];
			
		} while (note[i] < 1 or note[i]>10);
	}
	average = summe / num;
	cout << (" The average of the notes is: ") << average;


}
